<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.FragmentProfile">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="@string/app_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appLanguage"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/telephone"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:fontFamily="monospace"
                app:layout_constraintLeft_toRightOf="@+id/space"
                android:layout_marginEnd="8dp"/>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/appLanguageSpinner"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/appLanguage"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="@+id/appLanguage"
                app:layout_constraintBottom_toBottomOf="@+id/appLanguage"
                android:entries="@array/language_list"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:text="@string/telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/telephone"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="18sp"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@android:color/background_dark"
                android:fontFamily="monospace"
                app:layout_constraintLeft_toRightOf="@+id/space"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:text="(номер)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneNumber"
                app:layout_constraintLeft_toRightOf="@+id/telephone"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/telephone"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/telephone"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintVertical_bias="0.545"
                android:layout_marginEnd="8dp"/>

        <Space
                android:layout_width="50dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/space"
                />

        <CheckBox
                android:text="@string/i_don_t_speak_russian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                app:layout_constraintLeft_toRightOf="@+id/space"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/appLanguage"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintHorizontal_bias="0.0"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                android:layout_marginEnd="8dp"/>

        <Button
                android:text="@string/change_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBox"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:elevation="3dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintVertical_bias="1.0"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
